@charset "utf-8";
/* CSS Document */

.container { min-width:320px; margin:0 auto; overflow:hidden;} 
.top {width:320px; height:45px; padding-top:5px; padding-bottom:5px; position:relative; margin:0 auto;  border-bottom:1px solid #d7d7d7;}
.top .logo { width:98px; height:40px; background:url(../images/kongzhong.png) no-repeat; float:left; margin-right:10px;}
.top .logo a {width:98px; height:40px; display:block;}
.top h2 { font-size:16px; color:#b9bcbf; font-family:"Microsoft Yahei"; font-weight:normal; float:left; line-height:50px; height:50px;}
.select { position:relative; z-index:100;}
.selected span {display: inline-block; width: 105px;height: 25px; border: 1px solid #D7D7D7;  padding-left: 20px;line-height: 25px;cursor: pointer; font-size:12px;  background-image:url(../images/icon.gif); background-repeat: no-repeat; background-position: 0px -100px;}
.option {border: 1px solid #D7D7D7; border-top:1px solid #fff;width: 125px; position:absolute; top:26px; right:0px; background:#e7e5e5; z-index:100;}
.option li { font-size:12px; text-indent:20px; line-height:25px; cursor:pointer;}
.option li:hover { background:#cccbcb;}
.game { position:absolute; right:0px; bottom:10px;}
.fwq { width:127px; margin:0px; }

/*************表单信息***********/
.form { margin:0px 5px;}
.form table td { padding:2px 0px; font-size:1.2em;}
.left { width:310px;  margin:0 auto;}
.left .title1 { clear:both; width:100%; height:30px;  border-bottom:1px dashed #9fa3a7; line-height:30px;  font-size:14px; margin-bottom:10px; font-weight:bold; color:#262626;}
.info { line-height:30px; padding:0px 10px;}
.info input { border:1px solid #d7d7d7;padding:4px;}
.tips p.huodong { color:#ff0000; font-weight:bold;}
.tips { border-top:1px dashed #9fa3a7; margin-top:20px; font-size:1.2em;}
.tips .title2 { font-size:14px; color:#6fbc00; text-indent:10px; line-height:30px;}
.tips p { line-height:1.6em; color:#9fa3a7; padding-left:10px;}
.tips p.red { color:#fe6f00;}
.icon1 { width:20px; height:30px; background:url(../images/icon.gif) no-repeat 6px -52px; display:block; float:left;}
.icon2 { width:26px; height:30px; background:url(../images/icon.gif) no-repeat 0px -126px; display:block; float:left;}
.icon3 { width:26px; height:30px; background:url(../images/icon.gif) no-repeat 0px -150px; display:block; float:left;}
.warning { float:left;}
.form label { margin-left:4px; line-height:1.4em;}
.charge {padding-top:4px;}
.charge li { line-height:1.8em; margin-bottom:5px; font-size:1.2em;}
.charge input{border:0; margin-top:-3px;}

.btnno { margin:0 auto; height:2em; line-height:2em;  background-image: -webkit-linear-gradient(top, #fafafa 0, #d8d8d8 100%); background-image: linear-gradient(to bottom, #fafafa 0, #d8d8d8 100%); display:block; border-radius:10px; text-align:center; color:#999; font-size:1.4em; font-weight:bold; text-shadow:0 1px 1px #969696; border:1px solid #a2a2a2; cursor:default}
.btnnext { margin:0 auto; height:2em; line-height:2em;  background-image: -webkit-linear-gradient(top, #a9c41d 0, #96b123 100%); background-image: linear-gradient(to bottom, #a9c41d 0, #96b123 100%); display:block; border-radius:10px; text-align:center; color:#eee; font-size:1.4em; font-weight:bold; text-shadow:0 1px 1px #969696; border:1px solid #89a414}

.wraper { width:100%; padding:5px 0px; overflow:hidden; _zoom:1;}
.pleft { width:100%; float:left; font-size:14px; line-height:30px;}
.pright { width:100%; float:right;}

.wraper2 { width:100%; padding:5px 0px; overflow:hidden; _zoom:1;}
.wraper2 ul li { font-size:1.3em; color:#ff5d05; background:#fdf0d0; line-height:1.6em; margin:4px 0px;}
